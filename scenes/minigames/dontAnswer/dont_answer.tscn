script/source = "extends Control

@onready var label : Label = $VBoxContainer/Label as Label
@onready var hint : Label = $Hint as Label
@onready var button1 : Button = $VBoxContainer/GridContainer/Button as Button
@onready var button2 : Button = $VBoxContainer/GridContainer/Button2 as Button
@onready var button3 : Button = $VBoxContainer/GridContainer/Button3 as Button
@onready var button4 : Button = $VBoxContainer/GridContainer/Button4 as Button
@onready var timer : Timer = $TimerBeforeEnd as Timer


var question : Array = [\"Who are you ?\",\"questionb\",\"questionc\",\"questiond\"]
var reponse1 : Array = [\"Your son\",\"reponse1b\",\"reponse1c\",\" ... \"]
var reponse2 : Array = [\"I'am vENGEANce ! è_é\",\"reponse2b\",\" ... \",\"reponse2d\"]
var reponse3 : Array = [\"Someone ?\",\" ... \",\"reponse3c\",\"reponse3d\"]
var reponse4 : Array = [\" ... \",\"reponse4b\",\"reponse4c\",\"reponse4d\"]

var number : int = 0
var try : int = 0

func _ready():
	hint.modulate.a = 0.00
	timer.start()
	another_question()


func another_question():
	timer.wait_time = 15
	timer.start()
	label.text = question[number]
	button1.text = reponse1[number]
	button2.text = reponse2[number]
	button3.text = reponse3[number]
	button4.text = reponse4[number]
	number += 1
	if number > 3 :
		number = 0
	if try == 100:
		print(\"You're such an idiot\")
	else:
		try += 1
		hint.modulate.a += 0.05
	
func _on_timer_before_end_timeout():
	timer.stop()
	print(\"End Game\")
	GameManager.next_scene_to_call = \"scene_crowd_kid\"
	queue_free()
"

