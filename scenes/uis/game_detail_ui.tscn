script/source = "extends Control

@onready var label_text : Label = $HBoxContainer/LabelText as Label
@onready var label_score : Label = $HBoxContainer/VBoxContainer/LabelScore as Label
@onready var button : Button = $HBoxContainer/VBoxContainer/Button as Button

@export var scene_name : String = \"main_menu\"

signal launch_game

var number : int = 0


# Called when the node enters the scene tree for the first time.
func _ready():
	for i in 4:
		GameManager.score_table.append(GameManager.score)
	set_label()
	
	
func set_label() -> void:
		# scene_name + _title
		# scene_name + _text
		label_text.text = \"Unassigned Title :\\n \\n Unassigned text\"
		label_score.text = \"Best Score : \" + str(GameManager.score_table[number][0]) + \"\\n\\n Last Score : \" + str(GameManager.score_table[number][1])


func _on_button_pressed():
	launch_game.emit()
	GameManager.next_scene_to_call = scene_name
	GameManager.story_mode = false
	GameManager.in_game = true
"

